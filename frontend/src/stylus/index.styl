@import './mixins';
@import './reset';
@import './fonts';
@import './colors';

// @import './scrollbar';
html {
	height: 100%;
	overflow: hidden;
	font-family: 'Roboto';
	font-size: 16px;
	background-color: white;
}

body {
	width: 100%;
	height: 100%;
	background: none;
	// ::-webkit-scrollbar {
	// display: none;
	// }
	-ms-overflow-style: -ms-autohiding-scrollbar;

	// @import './scroll';
	input::-webkit-outer-spin-button, input::-webkit-inner-spin-button {
		-webkit-appearance: none;
		margin: 0;
	}
}

input[type=number] {
	-moz-appearance: textfield !important;
}

#ufonii-main {
	width: 100%;
	height: 100%;

	// Components
	@import './components/App';
}

// Hack to detect in JS the current media query
#ufonii-media-query {
	position: relative;
	z-index: -1000;
	bottom: 0;
	left: 0;
	height: 1px;
	width: 1px;

	+desktop() {
	}

	+mobile() {
		display: none;
		position: fixed; // Required for old IE
	}
}
